resource "aws_security_group" "allow-all" {
  vpc_id = module.vpc.vpc_id
  name = "iti-zup-allow-all"

  ingress {
    from_port = 0
    to_port = 0
    protocol = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    from_port = 0
    to_port = 0
    protocol = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
}